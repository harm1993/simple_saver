<h1>All goals</h1>

<%= link_to "Create new goal", new_goal_path, class: "s-button" %>

<hr>


<h3>Current goals</h3>
<ul>
  <% if @current_user.goals.exists? %>
    <%= link_to(goal_path(@current_goals)) do %>
      <li>
        <%= @current_goals.name %>
    <% end %>
        <%= @current_goals.saved %> | <%= @current_goals.amount %>
      </li>
  <% end %>
</ul>

<h3>Completed goals</h3>
<ul>
  <% @completed_goals.each do |goal| %>

    <li>
      <%= link_to(goal_path(goal)) do %>
        <%= goal.name %>
      <% end %>
        | <%= goal.amount %>
    </li>
  <% end %>
</ul>
