<div class="home-container">
  <div class="top-container">
    <%= link_to "All goals", goals_path, class: "s-button" %>
    <div class="balance">
      <h1>Overview</h1>
      <!-- <h5>$90.000,00</h5> -->
    </div>
    <button type="button" class="s-button" data-toggle="modal" data-target="#categoryModal">
  Add category
</button>
<%= render '/categories/modal' %>
  </div>

  <div class="dashboard-container text-left">
    <div class="goals-dashboard">
      <h2>Savings progress</h2>
      <% if @current_goal %>
        <%= render '/goals/show', goal: @current_goal %>
      <% else %>
        <p> <%= link_to "Add goal", new_goal_path, class: "s-button" %> </p>
      <% end %>
    </div>

    <div class="categories-dashboard">
      <h2 class="ml-4">Expense Categories</h2>
      <% if @categories.exists? %>
        <%= render '/categories/index', categories: @categories %>
      <% else %>
        <%= render '/categories/newcall' %>
      <% end %>

    </div>
  </div>
</div>

<%= render '/shared/expensecategory', category: @category %>

