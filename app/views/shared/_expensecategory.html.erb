
<%# <div class="card-expcat-container"> %>

  <div class="card-framework">

    <div class="layout-container">

      <div class="category-logo-container">
         <% if category.name == "Meals" %>
          <%= image_tag "lunch.svg", style: 'height:40px;'%>
          <% elsif category.name == "Coffee" %>
          <%= image_tag "coffee-cup.svg", style: 'height:40px;'%>
          <% elsif category.name == "Cigarettes" %>
          <%= image_tag "cigarette.svg", style: 'height:40px;'%>
          <% elsif category.name == "Delivery" %>
          <%= image_tag "pizza.svg", style: 'height:40px;'%>
          <% elsif category.name == "Other" %>
          <%= image_tag "debit-card.svg", style: 'height:40px;'%>
          <% elsif category.name == "Shopping" %>
          <%= image_tag "online-shopping.svg", style: 'height:40px;'%>
          <% end  %>

<!--       <div class="category-logo-container" style="background-image:url(<%#= asset_path category.name.downcase %>)"> -->

      </div>
      <div class="exp-cat-card-mid">
        <div class="text-x-progressbar">
          <a href="#" data-toggle="modal" data-target="#expenseModal-index-<%= category.id %>"><p><%= category.name.capitalize %> ðŸ›ˆ</p></a>
          <p><%= (category.spent_percentage * 100).to_i %>%</p>
        </div>
        <div class="state-bar" data-type="line" data-percentage="<%= category.spent_percentage %>"></div>
      </div>
    </div>

    <div class="icons-container">

      <href type="button" data-toggle="modal" data-target="#expenseModal-new-<%=category.id%>">
        <%= image_tag "add.svg", alt: "add button", style: 'height:22px; margin-right: 5px; margin-top: 4px;' %>
      </href>

       <href type="button" data-toggle="modal" data-target="#editCategoryModal-<%=category.id%>">
        <%= image_tag "edit.svg", alt: "edit button", style: 'height:25px;' %>
        </href>

      <%= link_to category_path(category), method: :delete do %>
        <%= image_tag "trash.svg", alt: "delete button", style: 'height:23px; margin-top: 2px;' %>
      <% end %>

    </div>
     <%= render '/expenses/modal', category: category %>
     <%= render '/categories/modal_edit', category: category %>
     <%= render '/expenses/modal_index', category: category %>
  </div>
 <hr>
