<div class="snap-target">
  <div class="card-box">


  <div class="card-pic">
    <%= image_tag "coffee.png", alt: "card_category_name" %>
  </div>

    <div class="card-bar-text-percentage">

      <div class="category-name-and-bar">
        <p class="card-category"><%= category.name.capitalize %></p>
        <div class="card-bar"><div class="state-bar w-50" data-type="line" data-percentage="<%= category.spent_percentage %>"></div></div>
      </div>

      <div class="card-percentage"><%= (category.spent_percentage*100).to_i %>%</div>

    </div>

    <div class="card-button"> > </div>

  </div>
</div>
