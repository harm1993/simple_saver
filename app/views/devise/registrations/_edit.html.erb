<h1>Edit Account</h1>

<div class="d-flex justify-content-around account-page">
  <div class="form-container" style="border-radius:20px">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs pt-2">

        <%= f.input :email, required: true, autofocus: true %>

        <div class="d-flex justify-content-between">
          <%= f.input :first_name, required: false, input_html: { autocomplete: current_user.first_name },
                      wrapper_html: { class: "flex-grow-1 pr-1" } %>
          <%= f.input :last_name, required: false, input_html: { autocomplete: current_user.last_name },
                      wrapper_html: { class: "flex-grow-1 pl-1" } %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.input :password,
                      required: false,
                      wrapper_html: { class: "flex-grow-1 pr-1" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      wrapper_html: { class: "flex-grow-1 pl-1" } %>
        </div>
        <p class="text-muted small">Leave it blank if you don't want to change it.</p>
        <%= f.input :current_password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "s-button" %>
      </div>
    <% end %>
  </div>
</div>
