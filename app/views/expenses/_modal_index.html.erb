<div class="modal fade" id="expenseModal-index" tabindex="-1" role="dialog" aria-labelledby="expenseIndex" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="expenseIndex">Add category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">     
        <div class="expenses">
          <div class="exp-container d-flex justify-content-around">
            <div class="exp-details mr-3">
              <% category.expenses.each do |expense| %>
                <div class="d-flex justify-content-between snap-target">
                  <h4><%= expense.place.capitalize %></h4>
                  <h4><strong>-<%= expense.amount %>â‚¬</strong></h4>
                </div>
                <div class="d-flex justify-content-between">
                  <p>Done on <%= expense.date %></p>
                </div>
                <div class="comands text-left">
                  <%= link_to edit_expense_path(expense) do %>
                    <i class="fas fa-pencil-alt fa-xs"></i>
                  <% end %>
                  <%= link_to expense_path(expense), method: :delete do %>
                    <i class="fas fa-trash-alt fa-xs"></i>
                  <% end %>
                </div>
                <hr>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>