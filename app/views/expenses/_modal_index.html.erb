<div class="modal fade" id="expenseModal-index-<%= category.id %>" tabindex="-1" role="dialog" aria-labelledby="expenseIndex" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mb-2" id="expenseIndex"><%= category.name.capitalize %> expenses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">     
        <div class="expenses">
          <div class="exp-container d-flex justify-content-around">
            <div class="exp-details mr-3">
              <% category.expenses.each do |expense| %>
                <div class="d-flex justify-content-between snap-target">
                  <p class="medium"><strong><%= expense.place.capitalize %></strong></p>
                  <p class="medium"><strong>-<%= expense.amount.to_i %>â‚¬</strong></p>
                </div>
                <div class="d-flex justify-content-between">
                  <p class="small">Done on <%= expense.date %></p>
                  <div class="comands">
                    <%#= link_to edit_expense_path(expense) do %>
                      <%#= image_tag "edit.svg", alt: "edit button", style: 'height:15px;' %>
                    <%# end %>
                    <%= link_to expense_path(expense), method: :delete do %>
                      <%= image_tag "trash.svg", alt: "delete button", style: 'height:15px;' %>
                    <% end %>
                  </div>
                </div>
                <hr>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>